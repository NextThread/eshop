<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title><%= title %></title>
  </head>
  <body>
    <%- include("includes/navbar") %>
    <main class="mx-5 my-5">
      <div class="card p-3">
        <div class="border-b border-gray-300 py-2 grid grid-cols-2 md:grid-cols-12 ">
          <h1 class="text-purple-700">
            All Orders <span class="font-bold">(<%= orders.length %>)</span>
          </h1>

          <a href="/clear-orders" class=" bg-red-200 px-2 py-1 rounded-sm inline-block">clear orders</a>
        </div>
        <div><% if(orders.length===0){ %>
          <p class="uppercase text-purple-700 p-3">No orders</p>
        <% } %> </div>
        <% orders.map(items=>{ %>

        <div
          class="
            my-2
            border border-gray-300
            rounded-md
            p-3
          "
        >
       
          <a
          href="/orders/<%= items._id %>"
          class="
            transition
            duration-500
            bg-purple-700
            text-white
            inline-block
            text-sm
            capitalize
            p-2
            rounded-md
            hover:shadow-md hover:bg-purple-800
            my-2
          "
        >
          <span>Download Invoice</span>
          <!-- <i class="bx bx-down-arrow-alt animate-bounce text-sm"></i> -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-5 text-white inline-block animate-bounce text-sm"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
          <% items.products.map(product=>{ %>
          <div>
            <div class="card my-2">
              <img
                src="<%= product.product.imageUrl %> "
                class="h-20 w-screen object-cover"
                alt=""
              />
              <div class="p-2">
                <p class="border-b border-gray-300 p-1 text-sm">
                  Name:
                  <span class="text-purple-700"
                    ><%= product.product.title %></span
                  >
                </p>
                <p class="border-b border-gray-300 p-1 text-sm">
                  Price:
                  <span class="text-purple-700"
                    >Kshs <%= product.product.price %></span
                  >
                </p>
               
                </p>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
