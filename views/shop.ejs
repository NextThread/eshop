<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title><%= title %></title>
  </head>
  <body class="bg-white">
    <%- include('includes/navbar') %>

    <main class="mx-12 my-2">
      <% if(products.length>0){ %>
      <h1 class="text-purple-700 m-3 uppercase">All Products</h1>
      <div
        class="w-full grid md:grid-cols-4 sm:grid-cols-2 xs:grid-cols-2 gap-6"
      >
        <% products.map(product=>{ %>
        <div class="card">
          <img
            src="<%= product.imageUrl %> "
            alt="product image"
            class="overflow-hidden cursor-move h-48 w-screen object-cover"
          />
          <div class="p-3">
            <p
              class="text-gray-500 capitalize border-l-8 border-purple-600 pl-2"
            >
              <%= product.title %>
            </p>
            <p class="text-gray-700 border-l-8 pl-2 mb-3">
              Kshs <%= product.price %>
            </p>

            <a
              href="/get-product/<%= product.id %> "
              class="
                py-1
                px-2
                bg-gray-300
                hover:bg-gray-400
                text-purple-700 text-sm
                rounded-sm
                shadow-md
              "
              >read more</a
            >
            <a
              href="/add-cart/<%= product.id %> "
              class="
                py-1
                px-2
                bg-purple-700
                hover:bg-purple-800
                text-white text-sm
                rounded-sm
                shadow-md
              "
              >add to cart</a
            >
          </div>
        </div>
        <% }) }else{ %>
        <p class="uppercase text-purple-700 text-center">No products found</p>
        <div class="flex justify-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 m-3 text-purple-700"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"
            />
          </svg>
        </div>
        <% } %>
      </div>
    </main>
  </body>
</html>
